@model EditJobAdvertisementVm

@{
    ViewData["Title"] = "تعديل إعلان توظيف";
}

<h1>تعديل إعلان توظيف</h1>

<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="texr-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <textarea asp-for="Details" class="form-control summernote"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FoundationId" class="control-label"></label>

                <select asp-for="FoundationId" asp-items="ViewBag.FoundationsList" class="form-control">
                    <option value="">Select Foundation..</option>
                </select>
                @*@Html.DropDownList("FoundationId", (SelectList)ViewBag.FoundationsList, "Select Foundation..",
                    new { @class = "form-control" })*@
                @*@Html.DropDownList("FoundationId", ViewBag.FoundationsList, "Select Foundation..",
                    new { @class = "form-control" })*@
                @*@Html.DropDownListFor(x => x.FoundationId, (SelectList)ViewBag.FoundationsList, "Select Foundation..",
                    new { @class = "form-control" })*@
                
                <span asp-validation-for="FoundationId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">إلغاء</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_Summernote");
    }
}