<!--Pagination-->
@{
    var url = "/" + ViewContext.RouteData.Values["controller"].ToString()
            + "/" + ViewContext.RouteData.Values["action"].ToString()
            + "?page=";
}
<nav aria-label="...">
    <ul class="pagination">
        <li class="page-item @(Model.Pagination.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="@(url + (Model.Pagination.CurrentPage-1))" tabindex="-1">السابق</a>
        </li>
        @*@for (int i = 1; i <= Model.PagesCount; i++)
            {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
            <a class="page-link" href="@(url + i)">
            @i@(i == Model.CurrentPage ? "<span class='sr-only'>(current)</span>" : "")
            </a>
            </li>
            }*@
        @for (int i = 1; i <= Model.Pagination.PagesCount; i++)
        {
            if (i == Model.Pagination.CurrentPage)
            {
                <li class="page-item active">
                    <a class="page-link" href="@(url + i)">@i<span class="sr-only">(current)</span></a>
                </li>
            }
            else
            {
                <li class="page-item"><a class="page-link" href="@url@i">@i</a></li>
            }
        }
        <li class="page-item @(Model.Pagination.CurrentPage == Model.Pagination.PagesCount ? "disabled" : "")">
            <a class="page-link" href="@url@(Model.Pagination.CurrentPage+1)">التالي</a>
        </li>
    </ul>
</nav>
<!--Pagination End-->